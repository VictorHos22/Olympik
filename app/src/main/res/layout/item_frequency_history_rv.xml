<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/training_view_style">

    <TextView
        android:id="@+id/txt_name_training"
        style="@style/textView"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@id/txt_date_training"
        android:text="@string/name_training" />

    <TextView
        android:id="@+id/txt_date_training"
        style="@style/textView"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_name_training"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/date_example" />

</androidx.constraintlayout.widget.ConstraintLayout>