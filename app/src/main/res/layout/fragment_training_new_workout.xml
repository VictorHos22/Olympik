<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="10dp">

    <TextView
        android:id="@+id/training_txt_new_training"
        style="@style/textViewTitle"
        android:paddingTop="8dp"
        android:text="@string/new_training"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_bottom_training_title"
        style="@style/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/training_txt_new_training" />

    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_bottom_training_title">

        <TextView
            style="@style/textView"
            android:text="@string/name_training" />

        <EditText
            style="@style/editText"
            android:background="@drawable/training_view_style" />

        <TextView
            style="@style/textView"
            android:text="@string/select_exercises" />

        <Spinner
            android:id="@+id/spinner_select_exercices"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/training_view_style" />


    </LinearLayout>


    <Button style="@style/button_common"
        android:layout_width="150dp"
        android:id="@+id/btn_cancel"
        android:text="@string/cancel"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ln"
        />

    <Button style="@style/button_common"
        android:layout_width="150dp"
        android:text="@string/create"
        app:layout_constraintTop_toBottomOf="@id/ln"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>