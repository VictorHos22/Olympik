<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/training_view_style">

    <ImageView
        android:id="@+id/training_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/musculo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/textView"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/training_btn"
        app:layout_constraintTop_toTopOf="@id/training_btn"
        android:layout_marginStart="15dp"
        android:text="@string/name_training" />

    <TextView
        style="@style/textView"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toEndOf="@+id/training_btn"
        app:layout_constraintBottom_toBottomOf="@id/training_btn"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="8dp"
        android:text="@string/num_rep" />

    <ImageView
        android:id="@+id/_training_btn_edit_training"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_more"/>

</androidx.constraintlayout.widget.ConstraintLayout>