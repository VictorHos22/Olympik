<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textView.profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:layout_marginTop">10dp</item>

        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="editTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/style_border</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/dark_blue</item>
    </style>

    <style name="editTextNumbers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/style_border</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@color/dark_blue</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="button_login" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="button_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="backgroundTint">@color/blue</item>
    </style>
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/gray_darker</item>
    </style>
    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/style_border</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">8dp</item>
<!--Nao consegui alterar o tamanho da fonte        -->
        <item name="android:textSize">24sp</item>
    </style>
</resources>